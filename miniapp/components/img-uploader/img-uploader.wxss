.weui-uploader__hd{
    display: flex;
    padding: 10px;
    align-items: center;
}
.weui-uploader__title{
    flex: 1;
}
.weui-uploader__info{
    color: #EEE;
}
.weui-uploader__bd{
  padding: 10px;
    margin-bottom: -4px;
    margin-right: -9px;
    overflow: hidden;
}
.weui-uploader__file{
    float: left;
    margin-right: 9px;
    margin-bottom: 9px;
}
.weui-uploader__img{
    display: block;
    width: 79px;
    height: 79px;
}
.weui-uploader__input{
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.weui-uploader__input-box{
    float:left;
    position: relative;
    margin-right: 9px;
    margin-bottom: 9px;
    width: 77px;
    height: 77px;
    border: 1px solid #D9D9D9;
}
.weui-uploader__input-box:before,.weui-uploader__input-box:after{
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #D9D9D9;
}
.weui-uploader__input-box:before{
  width: 2px;
  height: 40px;
}
.weui-uploader__input-box:after{
  width: 40px;
  height: 2px;
}
.weui-uploader__input-box:active{
  border-color: #D9D9D9;
}