/* pages/user-set/user-set.wxss *//* pages/publish/publish.wxss */
.image {
  width: 100%;
  height: 360rpx;
}
.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}
.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}
.wrapper{
  width: 100%;
  border-top: 5rpx solid #D9D9D9
}
.wrapper input{
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #d9d9d9;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #888888;
}